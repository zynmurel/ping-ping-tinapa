// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String        @id @default(cuid())
  emailID      String?
  userType     Role          @default(CUSTOMER)
  firstName    String?
  middleName   String?
  lastName     String?
  city         String?
  barangay     String?
  street       String?
  placeDetails String?
  phone        String?
  birthday     DateTime?
  email        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  Transaction  Transaction[]
  Order        Order[]
}

model Transaction {
  id          String             @id @default(cuid())
  user        User               @relation(fields: [userId], references: [id])
  userId      String
  status      TransactionStatus?
  type        TransactionType?
  deliveryFee Float?
  totalPrice  Float?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  Order       Order[]
}

model Order {
  id            String      @id @default(cuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  product       Product     @relation(fields: [productId], references: [id])
  productId     String
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  quantity      Int
  totalPrice    Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Product {
  id          String           @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int?
  category    ProductCategory?
  image       String?
  hidden      Boolean?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  Order       Order[]
}

model Settings {
  id          String @id @default(cuid())
  deliveryFee Int
  contact     String
  email       String
  address     String
  about       String
}

enum Role {
  ADMIN
  CUSTOMER
}

enum TransactionType {
  PICKUP
  DELIVER
}

enum ProductCategory {
  TINAPA
  PASALUBONG
}

enum TransactionStatus {
  NULL
  PENDING
  ONGOING
  DONE
  CANCELLED
}
